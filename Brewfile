# ─────────────────────────────
# 🍺 Homebrew Taps (sources)
# ─────────────────────────────
tap "bugsnag/tap"                  # For Bugsnag crash symbol upload tool
tap "mongodb/brew"                # MongoDB tools (e.g. mongosh)
tap "peripheryapp/periphery"     # Unused Swift code detection tool
tap "tuist/tuist"                # Project description manager for Xcode

# ─────────────────────────────
# 🧰 CLI Utilities
# ─────────────────────────────
brew "bat"                        # cat clone with syntax highlighting
brew "cloc"                       # Count lines of code
brew "fzf"                        # Fuzzy finder for shell
brew "rename"                     # Rename files in batch
brew "ripgrep"                    # Fast text searching (grep alternative)
brew "thefuck"                    # Correct mistyped shell commands
brew "tree"                       # Directory tree viewer
brew "wget"                       # Command-line file downloader
brew "pre-commit"                # Git hook framework
brew "virtualenv"                # Python virtual environments
brew "jq"                        # JSON CLI viewer

# ─────────────────────────────
# 🔧 Developer Tools
# ─────────────────────────────
brew "cmake"                     # C/C++ build tool
brew "gcc"                       # GNU compiler
brew "git-lfs"                   # Git Large File Storage
brew "ninja"                     # Fast build system
brew "nvm"                       # Node.js version manager
brew "openjdk@17", link: true    # Java 17 runtime and dev tools
brew "python@3.12"               # Python 3.12 interpreter
brew "dfu-util"                  # USB firmware flashing (embedded dev)
brew "docker-compose"            # Define and run Docker containers
brew "fastlane"                  # Automate iOS builds and releases
brew "cocoapods"                 # iOS dependency manager
brew "xcode-build-server"        # Xcode background build support
brew "sourcery"                  # Swift code generator
brew "swiftformat"               # Formatter for Swift code
brew "swiftlint"                 # Linter for Swift code
brew "glib"                      # Core GNOME library (used by Java and graphics)
brew "cairo"                     # 2D graphics library (dependency of glib/cocoa)
brew "harfbuzz"                  # Font shaping engine (used in rendering stacks)
brew "jenv"                      # Java version manager (like nvm for Java)

# ─────────────────────────────
# 🖼 Image/Rendering Libraries
# ─────────────────────────────
brew "libtiff"                   # TIFF image support
brew "little-cms2"               # Color profile engine
brew "webp"                      # WebP image format

# ─────────────────────────────
# 🧪 Project-Specific Tools
# ─────────────────────────────
brew "mongosh"                   # MongoDB shell
brew "bugsnag/tap/bugsnag-dsym-upload"  # Upload dSYMs to Bugsnag for crash symbolication

# ─────────────────────────────
# 🧠 Neovim
# ─────────────────────────────
brew "neovim"                    # Vim-based modern editor

# ─────────────────────────────
# 🧱 Applications (GUI via cask)
# ─────────────────────────────
cask "periphery"                 # GUI wrapper for periphery code analysis
cask "phantomjs"                 # Headless browser for testing/scripting
cask "provisionql"               # QuickLook plugin for provisioning profiles
cask "swiftformat-for-xcode"    # Xcode SwiftFormat plugin
cask "xcodes"                    # GUI for managing multiple Xcode versions

